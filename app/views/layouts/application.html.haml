!!! 5
%html( lang="#{I18n.locale}" )
  %head
    %meta{ charset: "utf-8" }/
    %meta{ 'http-equiv' => "X-UA-Compatible", content: "IE=edge,chrome=1" }/
    %title= t( "Page_title", pipe: yield(:title_pipe) )
    %meta{ 'name' => 'description', content: "#{ t('Site_description') }" }/
    %meta{ 'http-equiv' => 'Content-Language', content: "#{ I18n.locale }" }/
    %meta{ 'name' => 'viewport', content: "width=device-width,initial-scale=1.0" }/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = favicon_link_tag
    = render 'shared/fonts' unless Rails.env.test?
    = csrf_meta_tags
    = render 'shared/ie_shim'
  %body
    .container
      = render 'shared/navbar'
      .container{ 'role' => 'main' }
        = render 'shared/flash', flash: flash
        = yield
      = render 'shared/footer'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
